{
  "name": "@restorecommerce/scheduling-srv",
  "version": "1.4.2",
  "description": "Restorecommerce job scheduling microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "type": "module",
  "dependencies": {
    "@bull-board/api": "6.14.0",
    "@bull-board/express": "6.14.0",
    "@bull-board/koa": "6.14.0",
    "@restorecommerce/acs-client": "3.1.6",
    "@restorecommerce/chassis-srv": "1.7.8",
    "@restorecommerce/kafka-client": "1.3.6",
    "@restorecommerce/logger": "1.3.8",
    "@restorecommerce/rc-grpc-clients": "5.1.63",
    "@restorecommerce/scs-jobs": "0.2.6",
    "@restorecommerce/service-config": "1.1.7",
    "bullmq": "^5.61.0",
    "cache-manager": "^7.2.4",
    "cache-manager-redis": "^0.6.0",
    "cron-parser": "^5.4.0",
    "crypto": "^1.0.1",
    "express": "^5.1.0",
    "lodash-es": "^4.17.21",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.2.3",
    "@codingame/esbuild-import-meta-url-plugin": "^1.0.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@grpc/proto-loader": "^0.8.0",
    "@restorecommerce/dev": "^0.2.0",
    "@restorecommerce/grpc-client": "^2.2.13",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/express": "^5.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/nconf": "^0.10.7",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "husky": "9.1.7",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "6.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "dev": "cross-env NODE_ENV=development node lib/start.cjs",
    "test": "npm run lint && vitest run",
    "lint": "eslint src",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "build:es": "node esbuild.mjs",
    "build:clean": "rimraf lib",
    "copy:bullboard-ui-static": "npx copyfiles -u 1 \"./node_modules/@bull-board/ui/dist/**/*\" ./lib",
    "build": "npm-run-all lint build:clean build:es copy:bullboard-ui-static",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/scheduling-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/scheduling-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
