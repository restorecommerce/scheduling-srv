{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.0.1",
  "description": "Restore Commerce job scheduling microservice",
  "main": "lib/start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "https://github.com/restorecommerce/acs-client#acs-client-ctx-removed",
    "@restorecommerce/chassis-srv": "^0.1.1",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/kafka-client": "^0.1.10",
    "@restorecommerce/logger": "^0.1.16",
    "@restorecommerce/protos": "https://github.com/restorecommerce/protos#protos-acs",
    "@restorecommerce/service-config": "^0.1.6",
    "bull": "^3.15.0",
    "bull-board": "^0.9.0",
    "cache-manager": "^3.3.0",
    "cache-manager-redis": "^0.6.0",
    "cron-parser": "^2.15.0",
    "lodash": "^4.17.17"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "0.0.6",
    "@types/bull": "^3.14.0",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.19",
    "@types/redis": "^2.8.24",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "tsc -d && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "tsctests:watch": "tsc -d -p tsconfig.test.json --watch",
    "createtopics": "node setupTopics.js io.restorecommerce.jobs io.restorecommerce.jobs.resource io.restorecommerce.command",
    "test": "npm run lint && nyc npm run mocha_grpc && nyc npm run mocha_kafka && nyc npm run mocha:acs",
    "test-debug": "npm run mochadebug",
    "lint": "eslint src --ext .ts",
    "mocha_kafka": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mocha_grpc": "cross-env NODE_ENV=test mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:acs": "cross-env NODE_ENV=test ACS_ENABLED=true mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mochadebug": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js test/grpc_test.js --inspect-brk --full-trace --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
