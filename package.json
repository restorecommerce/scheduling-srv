{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.1.5",
  "description": "Restore Commerce job scheduling microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "github:restorecommerce/logger",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.0",
    "cache-manager": "^2.9.0",
    "cache-manager-redis": "^0.6.0",
    "co": "^4.6.0",
    "cross-env": "^5.2.0",
    "kue-scheduler": "^0.8.1",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@types/mocha": "^5.0.0",
    "@types/node": "^11.12.1",
    "@types/redis": "^2.8.6",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "should": "^13.2.1",
    "tslint": "^5.9.1",
    "typescript": "^3.3.4000"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && node start.js",
    "postinstall": "tsc -d",
    "pretest": "tsc -d && npm run tsctests && npm run createtopics",
    "tsctests": "tsc test/grpc_test.ts test/kafka_test.ts --module commonjs -target ES6",
    "createtopics": "node setupTopics.js io.restorecommerce.jobs io.restorecommerce.jobs.resource io.restorecommerce.command",
    "test": "npm run lint && npm run mocha_kafka && npm run mocha_grpc",
    "test-debug": "npm run mochadebug",
    "lint": "tslint *.ts test/*.ts",
    "mocha_kafka": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mocha_grpc": "cross-env NODE_ENV=test mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mochadebug": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js test/grpc_test.js --inspect-brk --full-trace --exit",
    "coveralls": "cross-env NODE_ENV=test istanbul cover _mocha --report lcovonly -- -R spec test/kafka_test.js test/grpc_test.js --exit",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf start.js service.js schedulingService.js worker.js kue_extensions.js",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
