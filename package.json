{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.3.1",
  "description": "Restorecommerce job scheduling microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@bull-board/api": "^4.0.0",
    "@bull-board/express": "^4.0.0",
    "@bull-board/koa": "^4.6.0",
    "@restorecommerce/acs-client": "^0.6.36",
    "@restorecommerce/chassis-srv": "^0.3.12",
    "@restorecommerce/cluster-service": "^0.1.13",
    "@restorecommerce/kafka-client": "^0.4.3",
    "@restorecommerce/logger": "^0.13.0",
    "@restorecommerce/protos": "^0.7.2",
    "@restorecommerce/service-config": "^0.4.27",
    "bull": "^4.8.4",
    "cache-manager": "^4.0.1",
    "cache-manager-redis": "^0.6.0",
    "cron-parser": "^4.5.0",
    "crypto": "^1.0.1",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@alenon/grpc-mock-server": "^3.0.8",
    "@grpc/proto-loader": "^0.6.13",
    "@restorecommerce/grpc-client": "^0.4.5",
    "@types/bull": "^3.15.8",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development && nodemon --watch './src/*.ts' --exec ts-node src/start.ts",
    "pretest": "tsc -d && npm run tsctests",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "tsctests:watch": "tsc -d -p tsconfig.test.json --watch",
    "test": "npm run lint && nyc npm run mocha:kafka && nyc npm run mocha:kafka_acs && nyc npm run mocha:grpc && nyc npm run mocha:grpc_acs",
    "test-debug": "npm run mochadebug",
    "lint": "eslint src --ext .ts",
    "mocha:kafka": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:grpc": "cross-env NODE_ENV=test mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:grpc_acs": "cross-env NODE_ENV=test ACS_ENABLED=true mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:kafka_acs": "cross-env NODE_ENV=test ACS_ENABLED=true mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mochadebug": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js test/grpc_test.js --inspect-brk --full-trace --exit",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
