{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.1.6",
  "description": "Restore Commerce job scheduling microservice",
  "main": "lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@restorecommerce/acs-client": "^0.2.13",
    "@restorecommerce/chassis-srv": "^0.1.5",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/kafka-client": "^0.1.12",
    "@restorecommerce/logger": "^0.3.5",
    "@restorecommerce/protos": "0.0.12",
    "@restorecommerce/service-config": "^0.3.1",
    "bull": "^3.18.0",
    "bull-board": "^0.9.0",
    "cache-manager": "^3.4.0",
    "cache-manager-redis": "^0.6.0",
    "cron-parser": "^2.16.3",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "0.0.7",
    "@types/bull": "^3.14.4",
    "@types/lodash": "^4.14.162",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "grpc-mock": "^0.7.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "start": "npm run createtopics && node lib/start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/*.ts' --exec ts-node src/start.ts",
    "pretest": "tsc -d && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "tsctests:watch": "tsc -d -p tsconfig.test.json --watch",
    "createtopics": "node setupTopics.js io.restorecommerce.jobs io.restorecommerce.command",
    "test": "npm run lint && nyc npm run mocha:kafka && nyc npm run mocha:kafka_acs && nyc npm run mocha:grpc && nyc npm run mocha:grpc_acs",
    "test-debug": "npm run mochadebug",
    "lint": "eslint src --ext .ts",
    "mocha:kafka": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:grpc": "cross-env NODE_ENV=test mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:grpc_acs": "cross-env NODE_ENV=test ACS_ENABLED=true mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mocha:kafka_acs": "cross-env NODE_ENV=test ACS_ENABLED=true mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mochadebug": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js test/grpc_test.js --inspect-brk --full-trace --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node lib/healthcheck.js"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
