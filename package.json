{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.0.1",
  "description": "Restore Commerce job scheduling microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/kafka-client": "^0.1.5",
    "@restorecommerce/logger": "^0.1.11",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.5",
    "bull": "^3.11.0",
    "cache-manager": "^2.10.0",
    "cache-manager-redis": "^0.6.0",
    "cron-parser": "^2.13.0",
    "cross-env": "^6.0.3",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "^0.0.1",
    "@types/bull": "^3.10.4",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "@types/redis": "^2.8.14",
    "coveralls": "^3.0.5",
    "mocha": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "cross-env NODE_ENV=development npm run createtopics && node start.js",
    "pretest": "tsc -d && npm run tsctests && npm run createtopics",
    "tsctests": "tsc -d -p tsconfig.test.json",
    "tsctests:watch": "tsc -d -p tsconfig.test.json --watch",
    "createtopics": "node setupTopics.js io.restorecommerce.jobs io.restorecommerce.jobs.resource io.restorecommerce.command",
    "test": "npm run lint && nyc npm run mocha_grpc && nyc npm run mocha_kafka",
    "test-debug": "npm run mochadebug",
    "lint": "tslint *.ts test/*.ts",
    "mocha_kafka": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js --full-trace --exit --trace-warnings --exit",
    "mocha_grpc": "cross-env NODE_ENV=test mocha -R spec test/grpc_test.js --full-trace --exit --trace-warnings --exit",
    "mochadebug": "cross-env NODE_ENV=test mocha -R spec test/kafka_test.js test/grpc_test.js --inspect-brk --full-trace --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:tsc": "tsc -d",
    "build:tsc:watch": "tsc -d --watch",
    "build:clean": "rimraf start.js service.js schedulingService.js worker.js healthcheck.js",
    "build": "npm-run-all lint build:clean build:tsc",
    "healthcheck": "node healthcheck.js"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
