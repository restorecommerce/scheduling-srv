{
  "name": "@restorecommerce/scheduling-srv",
  "version": "0.1.0",
  "description": "Restore Commerce job scheduling microservice",
  "main": "start.js",
  "author": "Invend GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/scheduling-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "job",
    "scheduling"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "github:restorecommerce/chassis-srv",
    "@restorecommerce/cluster-service": "^0.1.0",
    "@restorecommerce/kafka-client": "github:restorecommerce/kafka-client",
    "@restorecommerce/logger": "^0.1.0",
    "@restorecommerce/protos": "github:restorecommerce/protos",
    "@restorecommerce/service-config": "^0.1.0",
    "cache-manager": "^2.1.2",
    "cache-manager-redis": "^0.5.0",
    "co": "^4.6.0",
    "kue-scheduler": "^0.7.4",
    "lodash": "^4.14.1",
    "sleep": "^5.1.1"
  },
  "devDependencies": {
    "@restorecommerce/grpc-client": "github:restorecommerce/grpc-client",
    "@types/mocha": "^2.2.39",
    "@types/node": "^4.0.35",
    "@types/redis": "^2.8.6",
    "@types/should": "^11.2.0",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.4",
    "mocha": "^4.0.1",
    "should": "^11.2.1",
    "tslint": "^5.3.2",
    "typescript": "^2.3.4"
  },
  "scripts": {
    "start": "npm run createtopics && node start.js",
    "dev": "export NODE_ENV=development; npm run createtopics && node start.js",
    "postinstall": "tsc -d",
    "pretest": "tsc -d && npm run tsctests && npm run createtopics",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6",
    "createtopics": "node setupTopics.js io.restorecommerce.jobs io.restorecommerce.jobs.resource io.restorecommerce.command",
    "test": "npm run lint && npm run mocha",
    "test-debug": "npm run mochadebug",
    "lint": "tslint './*.ts'",
    "grpc-mocha": "export NODE_ENV=test; mocha -R spec ./test/grpc*.js --full-trace --exit --trace-warnings",
    "kafka-mocha": "export NODE_ENV=test; mocha -R spec ./test/kafka*.js --full-trace --exit --trace-warnings",
    "mocha": "export NODE_ENV=test; mocha -R spec ./test/grpc*.js --full-trace --exit --trace-warnings",
    "mochadebug": "export NODE_ENV=test; mocha -R spec ./test/*_test.js --inspect-brk --full-trace --exit",
    "coveralls": "export NODE_ENV=test; istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/*_test.js --exit"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
